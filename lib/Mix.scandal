// Mix two audio buffers.
lambda mix = array first -> array second -> {
	int samples = size(first)
	if size(second) < size(first) { samples = size(second) }
	array buffer = new(samples)
	int i = 0
	while i < samples {
		buffer[i] = first[i] + second[i]
		i = i + 1
	}
	return buffer
}

