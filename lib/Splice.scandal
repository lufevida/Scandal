// Splice two audio buffers.
lambda splice = array first -> array second -> {
	int samples = size(first) + size(second)
	array buffer = new(samples)
	int i = 0
	int j = 0
	while i < samples {
		if i < size(first) { buffer[i] = first[i] }
		if i >= size(first) {
			buffer[i] = second[j]
			j = j + 1
		}
		i = i + 1
	}
	return buffer
}

