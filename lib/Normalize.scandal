import("lib/Max.scandal")
import("lib/Scale.scandal")

// Compute the reciprocal of `max`.
lambda inverseMax = array x -> { return 1 / max(x) }

// Normalize an audio buffer.
lambda normalize = array x -> { return scale(x, inverseMax) }

